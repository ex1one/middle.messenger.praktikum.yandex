{{#> FormTemplate title="Регистрация"}}
    {{#*inline "body"}}
        {{> Input variant="underline" name="email" label="Почта" }}
        {{> Input variant="underline" name="login" label="Логин" }}
        {{> Input variant="underline" name="first_name" label="Имя"}}
        {{> Input variant="underline" name="second_name" label="Фамилия"}}
        {{> Input variant="underline" name="phone" label="Телефон"}}
        {{> Input variant="underline" name="password" label="Пароль"}}
        {{> Input variant="underline" name="confirm_password" label="Пароль ещё раз"}}
