{
  "name": "web-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "npm run build && node ./server.js",
